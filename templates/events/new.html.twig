    {{form_start(form)}}
    
    <div class="row">
        <div class="col">
            <div class="alert alert-dark">
                
            {{ form_row(form.name, {'label': 'Nom de l\'évènement', 'attr': {'placeholder': "Saisissez l'intitulé de l'évènement"}}) }}

            {{ form_row(form.subtitle, {'label': 'Sous-titre de l\'évènement', 'attr': {'placeholder': "Saisissez le sous-titre de l'évènement"}}) }}

            {{ form_row(form.date, {'label': 'Date de l\'évènement', 'attr': {'placeholder': "Saisissez une date et une heure pour l'évènement"}}) }}

            {{ form_row(form.place, {'label': 'Lieu de l\'évènement', 'attr': {'placeholder': "Saisissez une localisation"}}) }}

            {{ form_row(form.picture, {'label': 'Image d\'illustration', 'attr': {'placeholder': "URL de votre image d'illustration"}}) }}  

            {{ form_row(form.description, {'label': 'Contenu', 'attr': {'placeholder': "Description de l'évènement", 'label': 'Titre',
            'rows' : '10', 'cols' : '20' }}) }}   
                
            {# </div class="alert alert-dark"> #}
            {% if editMode %}
                <button type="submit" class="btn btn-success mt-3 mb-3" style="font-size: 1.5em;"><i class="fas fa-check"></i>
                     <b>Valider les modifications</b>
            {% else %}
                <button type="submit" class="btn btn-success mt-3 mb-3" style="font-size: 1.5em;"><i class="fas fa-check"></i>
                    <b>Ajouter</b>
                    </button>
            {% endif %}
            </div>
        </div>
    </div>
