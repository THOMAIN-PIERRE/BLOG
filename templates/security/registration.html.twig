{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}


{% block body %}

<div class="container mb-5">
    <h1 class="my-5 text-center">INSCRIPTION</h1>

    {{form_start(form)}}
    

    <div class="row">
        <div class="col">
            <div class="alert alert-dark">
                
             {{form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Entrez votre nom d\'utilisateur'}})}}
             {{form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Entrez votre adresse email'}})}}
             {{form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Entrez votre mot de passe'}})}}
             {{form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Saisissez Ã  nouveau votre mot de passe'}})}}
         
                
            </div>
            <div class="alert alert-dark">
                <p>Confirmez votre inscription pour nous rejoindre !</p>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i>
                    Je m'inscris !</button>

            </div>
        </div>
    </div>

    {{form_end(form)}}
</div>
{% endblock %}